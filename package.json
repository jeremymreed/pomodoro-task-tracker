{
  "name": "pomodoro-task-tracker",
  "version": "0.0.0",
  "description": "Task Tracking using the Pomodoro technique",
  "main": "build/main.js",
  "scripts": {
    "project:start": "npm run clean && npm run lint && npm run babel && npm run move-static && npm start",
    "start": "electron-forge start",
    "babel": "babel src/ --out-dir build/ --source-maps",
    "move-static": "cp static/* build/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*",
    "clean": "rm -rf out/ build/",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Jeremy M. Reed",
  "license": "GPLv2",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "electron": "^9.1.0",
    "eslint": "^7.5.0",
    "eslint-plugin-react": "^7.20.3"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_spike"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
